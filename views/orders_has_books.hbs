<header>
    <h1>Orders has Books</h1>
</header>

{{!-- Create a table --}}
<table id="OhB-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr id="orders-has-books-header">
            {{!-- <th>Orders Has Books ID</th>
            <th>Order ID</th>
            <th>Book ID</th> --}}
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the ordersHasBooksID, orderID, and bookID in order --}}
        {{#each data}}
        <tr>
            <td>{{this.ordersHasBooksID}}</td>
            <td>{{this.orderID}}</td>
            <td>{{this.bookID}}</td>
           
        </tr>
        {{/each}}
    </tbody>
</table>

<h2>Add Orders has Books</h2>
<form id="add_orders_has_books_form">
    <label for="orderID">orderID:</label>
    <br>
    <input type="number" id="orderID" name="orderID">
    <br><br>

    <label for="bookID">bookID:</label>
    <br>
    <input type="number" id="bookID" name="bookID">
    <br><br>

    <input type="submit">
    <br>
</form>
<script src="./js/add_orders_has_books.js"></script>

